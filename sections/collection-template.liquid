              <h1 class="hero-heading reveal-up-child">
                <span class="visually-hidden">{{ 'collections.general.collection_label' | t }}: </span>
                {{ collection.title }}
              </h1>
              {% if collection.description != blank %}
                  <div class="rte-setting hero-caption reveal-up-child">{{ collection.description }}</div>
              {%- endif -%}
          </div>
        </div>
      </div>
      {% if is_filter_by_available == false and section.settings.sort_enable == false %}
        <div class="page-width no-filter">
          <span class="filters-toolbar__product-count"></span>
        </div>
      {% endif %}
    {% elsif section.settings.show_collection_image and collection.image == blank %}
        <div class="collection-hero row">
          <div class="collection-hero__image">
            {% if section.settings.collection_image != blank %}
              <img 
                  class="lazyload hide-xs"   
                  src="{{ section.settings.collection_image | img_url: '50x' }}"  
                  data-src="{{ section.settings.collection_image | img_url: '50x' }}"  
                  data-srcset="{{ section.settings.collection_image | img_url: '180x' }} 180w,{{ section.settings.collection_image | img_url: '360x' }} 360w,{{ section.settings.collection_image | img_url: '768x' }} 768w,{{ section.settings.collection_image | img_url: '992x' }} 992w,{{ section.settings.collection_image | img_url: '1200x' }} 1200w,{{ section.settings.collection_image | img_url: '1500x' }} 1500w, {{ section.settings.collection_image | img_url: '2100x' }} 2100w,  {{ section.settings.collection_image | img_url: '2560x' }} 2560w"
                  alt="{{ section.settings.image.alt | escape }}"
              />
            {% else %}
              <img 
                  class="lazyload hide-xs"   
                  src="{{ 'hero_ph.jpg' | asset_url }}"  alt="collection hero image"/>
            {% endif %}
            {% if section.settings.collection_image_mob != blank %}
              {%- assign img_url_mob = section.settings.collection_image_mob | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
              <img
              class="lazyload hide-sm"   
                  src="{{ section.settings.collection_image_mob | img_url: '50x' }}"  
                  data-src="{{ img_url_mob }}"
                  data-srcset="{{ section.settings.collection_image_mob | img_url: '180x' }} 180w,{{ section.settings.collection_image_mob | img_url: '360x' }} 360w,{{ section.settings.collection_image_mob | img_url: '768x' }} 768w,{{ section.settings.collection_image_mob | img_url: '992x' }} 992w,{{ section.settings.collection_image_mob | img_url: '1200x' }} 1200w,{{ section.settings.collection_image_mob | img_url: '1500x' }} 1500w, {{ section.settings.collection_image_mob | img_url: '2100x' }} 2100w,  {{ section.settings.collection_image_mob | img_url: '2560x' }} 2560w"
                  alt="{{ section.settings.collection_image_mob.alt | escape }}"
              />
            {% else %}
            <img 
                  class="lazyload hide-sm"   
                  src="{{ 'hero_ph_mbl.png' | asset_url }}"  alt="collection hero image"/>
            
            {% endif %}
          </div>
          <div class="hero-page page-width hero__inner row mobile-h-padding {{ section.settings.text_v_m }}-xs {{ section.settings.text_v }}-sm {% if section.settings.text_h_m == 'center' %}center-xs {% elsif section.settings.text_h_m == 'right' %}end-xs {% else %}start-xs {% endif %} {% if section.settings.text_h == 'center' %}center-sm {% elsif section.settings.text_h == 'right' %}end-sm{% else %}start-sm{% endif %}">
            <div class="col-sm-5 col-xs-10">
                <h1 class="hero-heading reveal-up-child">
                  <span class="visually-hidden">{{ 'collections.general.collection_label' | t }}: </span>
                  {{ collection.title }}
                </h1>
                {% if collection.description != blank %}
                    <div class="rte-setting hero-caption reveal-up-child">{{ collection.description }}</div>
                {% elsif section.settings.description_text != blank %}
                    <div class="rte-setting hero-caption reveal-up-child">{{ section.settings.description_text }}</div>
                {%- endif -%}
            </div>
          </div>
        </div>
        {% if is_filter_by_available == false and section.settings.sort_enable == false %}
          <div class="page-width">
            <span class="filters-toolbar__product-count"></span>
          </div>
        {% endif %}
    {% else %}
      <div class="page-width page-with-header">
        <div class="section-header text-center">
          <h1>
            <span role="text">
              <span class="visually-hidden">{{ 'collections.general.collection_label' | t }}: </span>
              {{ collection.title }}
            </span>
          </h1>
          {% if collection.description != blank %}
            <div class="rte">
              {{ collection.description }}
            </div>
          {% endif %}
          {% if is_filter_by_available == false and section.settings.sort_enable == false %}
            <span class="filters-toolbar__product-count">{{ 'collections.general.items_with_count' | t: count: collection.products_count }}</span>
          {% endif %}
        </div>
      </div>
    {% endif %}
    <div class="value-section">
      <div class="value-inner" style="background-color: {{ section.settings.bg }}">
        <div class="page-width">
                <div class="row mobile-h-padding center-xs middle-xs">
                <div class="col-md-{% if section.settings.column == "3" %}4{% elsif section.settings.column == "4" %}3{% elsif section.settings.column == "5" %}2{% elsif section.settings.column == "6" %}2{% endif %} col-xs value-block row middle-xs">
                    {% if section.settings.icon_image1 != blank %} 
                  <img
                        class="lazyload lazy col-xs"     
                        src="{{ section.settings.icon_image1 | img_url: '120x' }}" 
                        data-srcset="{{ section.settings.icon_image2 | img_url: '400x' }} 240w, {{ section.settings.icon_image2 | img_url: '400x' }} 500w"
                        data-aspectratio="{{ section.settings.icon_image2.aspect_ratio }}"
                        data-sizes="auto"
                        alt="{{ section.settings.icon_image2.alt | escape }}"
                    />
                  {% else %}
                   <img
                        class="lazyload lazy col-xs"     
                        src="{{ 'ico.png' | asset_url }}"  >
                  {% endif %}
                    <h2 class="h5 col-xs" style="color: {{ section.settings.text-color }} !important;">{{ section.settings.block-text1 | escape }}</h2>
                </div>
                <div class="col-md-{% if section.settings.column == "3" %}4{% elsif section.settings.column == "4" %}3{% elsif section.settings.column == "5" %}2{% elsif section.settings.column == "6" %}2{% endif %} col-xs value-block row middle-xs">
                  {% if section.settings.icon_image2 != blank %} 
                  <img
                        class="lazyload lazy col-xs"     
                        src="{{ section.settings.icon_image2 | img_url: '120x' }}" 
                        data-srcset="{{ section.settings.icon_image2 | img_url: '400x' }} 240w, {{ section.settings.icon_image2 | img_url: '400x' }} 500w"
                        data-aspectratio="{{ section.settings.icon_image2.aspect_ratio }}"
                        data-sizes="auto"
                        alt="{{ section.settings.icon_image2.alt | escape }}"
                    />
                  {% else %}
                   <img
                        class="lazyload lazy col-xs"     
                        src="{{ 'ico.png' | asset_url }}"  >
                  {% endif %}
                    <h2 class="h5 col-xs" style="color: {{ section.settings.text-color }} !important;">{{ section.settings.block-text2 | escape }}</h2>
                </div>
                <div class="col-md-{% if section.settings.column == "3" %}4{% elsif section.settings.column == "4" %}3{% elsif section.settings.column == "5" %}2{% elsif section.settings.column == "6" %}2{% endif %} col-xs value-block row middle-xs">
                   {% if section.settings.icon_image3 != blank %} 
                  <img
                        class="lazyload lazy col-xs"     
                        src="{{ section.settings.icon_image3 | img_url: '120x' }}" 
                        data-srcset="{{ section.settings.icon_image2 | img_url: '400x' }} 240w, {{ section.settings.icon_image2 | img_url: '400x' }} 500w"
                        data-aspectratio="{{ section.settings.icon_image2.aspect_ratio }}"
                        data-sizes="auto"
                        alt="{{ section.settings.icon_image2.alt | escape }}"
                    />
                  {% else %}
                   <img
                        class="lazyload lazy col-xs"     
                        src="{{ 'ico.png' | asset_url }}"  >
                  {% endif %}
                    <h2 class="h5 col-xs" style="color: {{ section.settings.text-color }} !important;">{{ section.settings.block-text3 | escape }}</h2>
                </div>
                <div class="col-md-{% if section.settings.column == "3" %}4{% elsif section.settings.column == "4" %}3{% elsif section.settings.column == "5" %}2{% elsif section.settings.column == "6" %}2{% endif %} col-xs value-block row middle-xs">
                    {% if section.settings.icon_image4 != blank %} 
                  <img
                        class="lazyload lazy col-xs"     
                        src="{{ section.settings.icon_image4 | img_url: '120x' }}" 
                        data-srcset="{{ section.settings.icon_image2 | img_url: '400x' }} 240w, {{ section.settings.icon_image2 | img_url: '400x' }} 500w"
                        data-aspectratio="{{ section.settings.icon_image2.aspect_ratio }}"
                        data-sizes="auto"
                        alt="{{ section.settings.icon_image2.alt | escape }}"
                    />
                  {% else %}
                   <img
                        class="lazyload lazy col-xs"     
                        src="{{ 'ico.png' | asset_url }}"  >
                  {% endif %}
                    <h2 class="h5 col-xs" style="color: {{ section.settings.text-color }} !important;">{{ section.settings.block-text4 | escape }}</h2>
                </div>
                {% if section.settings.button_link != blank %}
                <a href="{{ section.settings.button_link }}" class="btn btn-full-small reveal-up-child" aria-label="{{ ariaLabel }}">
                    {{ section.settings.button_label | escape }}
                </a>
                {% endif %}
            </div>
        </div>
      </div>
    </div>
    {% if is_filter_by_available or section.settings.sort_enable %}
      <div class="filters-toolbar-wrapper{% if is_filter_by_available %} filters-toolbar--has-filter{% endif %}">
        <div class="page-width mobile-h-padding filter-outer">
          <div class="filters-toolbar row">
            <div class="filters-toolbar__item-wrapper col-xs-12 col-md-9 {% if is_filter_by_available == true and section.settings.sort_enable == true %}filtersTrue{% endif %}">
              {% if section.settings.tags_enable %}
                {% unless collection.all_tags.size == 0 %}
                  <div class="">
                    <label class="filters-toolbar__label select-label" for="FilterTags">{{ 'collections.filters.title_tags' | t }}</label>
                    <div class="filters-toolbar__input-wrapper select-group">
                      <select class="filters-toolbar__input hidden" name="FilterTags" id="FilterTags" aria-describedby="a11y-refresh-page-message a11y-selection-message">
                        <option value="{{ collection.url }}">{{ 'collections.filters.all_tags' | t }}</option>
                        {% for tag in collection.all_tags %}
                          {%- assign new_url = tag | link_to_tag: tag | split: 'href="' | last | split: '"' | first -%}
                          <option value="{{ new_url }}"{% if current_tags contains tag %} selected="selected"{% endif %}>{{ tag }}</option>
                        {% endfor %}
                      </select>
                      {% include 'icon-chevron-down' %}
                    </div>
                  </div>
                {% endunless %}
              {% endif %}

              {% if section.settings.sort_enable %}
                <div class="filters-toolbar__item-child">
                  {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
                  <label class="filters-toolbar__label select-label" for="SortBy">{{ 'collections.sorting.title' | t }}</label>
                  <div class="filters-toolbar__input-wrapper select-group">
                    <select name="sort_by" id="SortBy"
                      class="filters-toolbar__input hidden"
                      aria-describedby="a11y-refresh-page-message a11y-selection-message"
                      data-default-sortby="{{ collection.default_sort_by }}"
                    >
                      {%- for option in collection.sort_options -%}
                        <option value="{{ option.value }}" {% if option.value == sort_by %}selected="selected"{% endif %}>{{ option.name }}</option>
                      {%- endfor -%}
                    </select>
                    {% include 'icon-chevron-down' %}
                  </div>
                </div>
              {% endif %}
            </div>

            <div class="filters-toolbar__item filters-toolbar__item--count {% if is_filter_by_available == true and section.settings.sort_enable == true %}filterCount{% endif %}  col-xs-12 col-md-3">
              <span class="filters-toolbar__product-count">{{ 'collections.general.items_with_count' | t: count: collection.products_count }}</span>
            </div>
          </div>
        </div>
      </div>
    {% endif %}
  </header>
	
  
  <div class="page-width" id="Collection">

      <div class="section-header mobile-h-padding" style="margin-left: 8px;">
        <p class="subheading product-time">{{ template.name }}</p>
        <h2>{{ page_title }}</h2>
      </div>

      {% case section.settings.grid %}
      {% when 2 %}
        {%- assign grid_item_width = 'col-sm-6' -%}
      {% when 3 %}
        {%- assign grid_item_width = 'col-sm-4' -%}
      {% when 4 %}
        {%- assign grid_item_width = 'col-sm-3' -%}
      {% endcase %}

      <ul class="row mobile-h-padding collection-product-row">
        {% for product in collection.products %}
          <li class="flex__item--{{section.id}} {{ grid_item_width }} col-xs-6 product-card-container">
            {% include 'product-card-grid', max_height: max_height, product: product, show_vendor: section.settings.show_vendor, container: 'product-category' %}
          </li>
        {% else %}
          {% comment %}
          Add default products to help with onboarding for collections/all only.

          The onboarding styles and products are only loaded if the
          store has no products.
          {% endcomment %}
          {% if collection.handle == 'all' and collection.all_vendors.size == 0 and collection.all_types.size == 0 %}
            <li class="grid__item">
              <div class="grid grid--uniform">
                {% for i in (1..limit) %}
                  <div class="grid__item {{ grid_item_width }}">
                    <div class="grid-view-item">
                      <a href="#" class="grid-view-item__link">
                        <div class="grid-view-item__image">
                          {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                          {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                        </div>
                        <div class="h4 grid-view-item__title">{{ 'homepage.onboarding.product_title' | t }}</div>
                        <div class="grid-view-item__meta">
                          <span class="product-price__price">$19.99</span>
                        </div>
                      </a>
                    </div>
                  </div>
                {% endfor %}
              </div>
            </li>
          {% else %}
            {%- assign is_empty_collection = true -%}
          {% endif %}
        {% endfor %}
      </ul>

    {% if is_empty_collection %}
      <div class="grid__item small--text-center">
        <p class="text-center">{{ 'collections.general.no_matches' | t }}</p>
      </div>
    {% endif %}

    {%- if paginate.pages > 1 -%}
      {% include 'pagination', paginate: paginate %}
    {%- endif -%}
  </div>
</div>

{% endpaginate %}



