<div class="value-props" style="background-color: {{ section.settings.bg }};">
    <div class="page-width">
        <div class="row">
            <div class="value-img">
            <img
                class="hide-xs"   
                src="{{ section.settings.image | img_url: '1600x' }}"   
                alt="{{ section.settings.image.alt | escape }}"
            />
            <img
            class="hide-sm"   
                src="{{ section.settings.image_mob | img_url: '600x' }}"  
                alt="{{ section.settings.image_mob.alt | escape }}"
            />
            </div>
            
        </div>
    </div>
</div>


{% schema %}
{
    "name": "Value Props",
    "settings": [
        {
            "type": "header",
            "content": "Color Settings"
        },
        {
            "type": "color",
            "id": "bg",
            "label": "Background Color",
            "default": "#ffe8e0"
        },
        {
            "type": "header",
            "content": "Image Settings"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image Upload (Desktop)"
        },
        {
            "type": "image_picker",
            "id": "image_mob",
            "label": "Image Upload (Mobile)"
        }
    ],
    "presets": [
        {
            "name": "Value Props",
            "category": "Image"
        }
    ]
}
{% endschema %}
