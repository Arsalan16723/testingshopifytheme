<style>
  .the_logo_list{text-align:center;width:100%; padding:{{- section.settings.padding -}};
    background-color:{{section.settings.bg_color}};
    margin:{{- section.settings.margin -}};
  }

</style>
<div class="the_logo_list logo-slider-outer content-with-padding padding-small" data-section-id="{{ section.id }}" id="logo_list_{{section.id}}">
  <h2 class="SectionHeader__Heading primary_heading">{{section.settings.title}}</h2>
  <div class="logo-slider">
    <div class="logoList_inner">

      {% for block in section.blocks %}
        <div class="logo_img_cba logo-slide">
          <img src="{{block.settings.image | img_url: '4000x' }}" style="max-width:{{block.settings.width}};" class="wow pulse" data-wow-duration="1.5s" data-wow-delay="0.{{- forloop.index -}}s">
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "As Seen In",
  "class": "shopify-section--as_seen_in",
  "max_blocks": 13,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "As Seen In"
    },
    {
      "type": "text",
      "id": "padding",
      "label": "top right bottom left padding",
      "default": "50px 20px 50px 20px"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section BG",
      "default": "#f3ece6"
    },
    {
      "type": "text",
      "id": "margin",
      "label": "top right bottom left margin",
      "default": "-10px 0px -30px 0px"
    }
    
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Logo List",
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "id": "width",
          "type": "text",
          "label": "Image Width",
          "default": "120px;"
        }
        
      ]
    }
  ],
  "presets": [
    {
      "name": "As Seen In",
      "category": "image",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}

{% endschema %}