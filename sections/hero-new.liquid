<div class="outer hero-new {% if section.settings.full_width %}full-size{% endif %}" style="background-color: {{ section.settings.bg }};">
    {% if section.settings.full_width %}<a href="{{ section.settings.link_url }}">{% endif %}<div class="{% unless section.settings.full_width %}page-width{% endunless %} row middle-xs">
        {% unless section.settings.full_width %}
        <div class="hero-text-outer col-sm-4 col-xs-12">
            <h1>{{ section.settings.title }}</h1>
            <div class="hero-caption">{{ section.settings.subtitle }}</div>
            <a href="{{ section.settings.link_url }}" class="btn">{{ section.settings.link_text }}</a>
        </div>
        {% endunless %}
        <div class="hero-image-outer {% if section.settings.full_width %}col-sm-12{% else %}col-sm-8{% endif %} col-xs-12">
            <img
                class="lazyload hide-xs"   
                src="{{ section.settings.image | img_url: '50x' }}"  
                data-srcset="{{ section.settings.image | img_url: '180x' }} 180w,{{ section.settings.image | img_url: '360x' }} 360w,{{ section.settings.image | img_url: '768x' }} 768w,{{ section.settings.image | img_url: '992x' }} 992w,{{ section.settings.image | img_url: '1200x' }} 1200w,{{ section.settings.image | img_url: '1500x' }} 1500w, {{ section.settings.image | img_url: '2100x' }} 2100w,  {{ section.settings.image | img_url: '2560x' }} 2560w"
                data-aspectratio="{{ section.settings.image.aspect_ratio }}"
                data-sizes="auto"
                data-image
                data-parent-fit="cover"
                alt="{{ section.settings.image.alt | escape }}"
            />
            {%- assign img_url_mob = section.settings.image_mob | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
            <img
            class="lazyload hide-sm"   
                src="{{ section.settings.image_mob | img_url: '50x' }}"  
                data-src="{{ img_url_mob }}"
                data-widths="[180, 360, 768, 992, 1200, 1500]"
                data-aspectratio="{{ section.settings.image_mob.aspect_ratio }}"
                data-sizes="auto"
                data-image
                data-parent-fit="cover"
                alt="{{ section.settings.image_mob.alt | escape }}"
            />
        </div>
    </div>
    {% if section.settings.full_width %}</a>{% endif %}
</div>

{% schema %}
{
    "name": "Hero Section New",
    "settings": [
        {
            "type": "header",
            "content": "Hero Main Settings"
        },
        {
            "type": "checkbox",
            "id": "full_width",
            "label": "Full With Banner",
            "default": false
        }, 
        {
            "type": "header",
            "content": "Color Settings"
        },
        {
            "type": "color",
            "id": "bg",
            "label": "Background Color",
            "default": "#ffe8e0"
        },
        {
            "type": "header",
            "content": "Image Settings"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image Upload (Desktop)"
        },
        {
            "type": "image_picker",
            "id": "image_mob",
            "label": "Image Upload (Mobile)"
        },
        {
            "type": "header",
            "content": "Text Settings"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Heading Text"
        },
        {
            "type": "text",
            "id": "subtitle",
            "label": "Subheading",
            "default": "Subheading Text"
        },
        {
            "type": "url",
            "id": "link_url",
            "label": "CTA Link"
        },
        {
            "type": "text",
            "id": "link_text",
            "label": "CTA Text",
            "default": "Shop Now"
        }
    ],
    "presets": [
        {
            "name": "Hero Section New",
            "category": "Image"
        }
    ]
}
{% endschema %}
