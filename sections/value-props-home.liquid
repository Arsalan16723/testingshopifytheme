{% if section.blocks.size > 0 %}
<div class="value-inner" style="background-color: {{ section.settings.bg }}">
    <div class="page-width">
            <div class="row mobile-h-padding center-xs middle-xs home--val_in">
        
            {% for block in section.blocks %}
            <div class="value-block row middle-xs" {{ block.shopify_attributes }}>
              
             {% if block.settings.icon_image != blank %}
               <img
                    class="lazyload lazy col-xs"     
                    src="{{ block.settings.icon_image | img_url: '120x' }}" 
                    data-srcset="{{ block.settings.icon_image | img_url: '400x' }} 240w, {{ block.settings.icon_image | img_url: '400x' }} 500w"
                    data-aspectratio="{{ block.settings.icon_image.aspect_ratio }}"
                    data-sizes="auto"
                    alt="{{ block.settings.icon_image.alt | escape }}"
                />
             {% else %}
             <img src="{{ 'ico.png' | asset_url  }}">
             {% endif %}
               
             
                <span class="vp-home col-xs" style="color: {{ section.settings.text-color }} !important;font-size:{{section.settings.sizeb}}px;font-weight:300;letter-spacing:normal;">{{ block.settings.block-text | escape }}</span>
            </div>
        
            {% endfor %}
            {% if section.settings.button_link != blank %}
            <a href="{{ section.settings.button_link }}" class="btn btn-full-small reveal-up-child" aria-label="{{ ariaLabel }}">
                {{ section.settings.button_label | escape }}
            </a>
            {% endif %}
        </div>
    </div>
</div>
{% endif %}
    {% schema %}
    {
        "name": "Product Benefits Bar",
        "class": "value-section",
        "tag": "section",
        "max_blocks": 6,
        "settings": [
            {
                "type": "header",
                "content": "Colors"
            },
            {
              "type": "range",
              "id": "sizeb",
              "label": {
                "en": "Custom Font Size"
              },
              "min": 10,
              "max": 20,
              "step": 1,
              "unit": "px",
              "default": 15
            },
            {
                "type": "color",
                "id": "bg",
                "label": "Background",
                "default": "#fff"
            },
			{
                "type": "color",
                "id": "text-color",
                "label": "Text Color",
                "default": "#222"
            },
            {
                "type": "select",
                "id": "column",
                "label": "Total blocks",
                "options": [
					{
                        "value": "3",
                        "label": "Three blocks"
                    },
                    {
                        "value": "4",
                        "label": "Four blocks"
                    },
                    {
                        "value": "5",
                        "label": "Five blocks"
                    },
                    {
                        "value": "6",
                        "label": "Six blocks"
                    }
                ],
				"default": "6"
            },
            {
                "type": "text",
                "id": "button_label",
                "label": "Button label"
            },
            {
                "type": "url",
                "id": "button_link",
                "label": "Button link"
            }
        ],
        "blocks": [
          {
            "type": "image",
            "name": "Value Prop",
            "settings": [
                {
                    "type": "header",
                    "content": "Icon"
                },
                {
                    "type": "image_picker",
                    "id": "icon_image",
                    "label": "Icon upload"
                },
                {
                    "type": "text",
                    "id": "block-text",
                    "label": "Icon text",
                    "default": "Lorum Ipsum"
                }
            ]
          }
        ],
        "presets": [
            {
                "name": "Value Props Hero",
                "category": "Image"
            }
        ]
    }
    {% endschema %}
    