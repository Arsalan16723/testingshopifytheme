<div class="content-section-outer" style="background-color: {{ section.settings.bg }}">
  {% if section.settings.radio_page == "boxed" %}
  <div class="page-width">
  {% endif %}
    <div class="video_icon_header col-md-12 col-xs-12 text-center">
       <h2 class="vih_title">{{section.settings.heading}}</h2>
      <p>{{section.settings.subHeading}}</p>
      <br>
    </div>
  <div id="content-inner-{{ section.id }}" 
    class="content-inner cornervideo__inner row middle-md 
    {% if section.settings.radio == "right" %} reverse {% endif %}">
      <div class="content-image-outer col-xs-12 col-sm-6 col-md-6 lazy-container {% if section.settings.radio == "right" %}{% endif %} {% if section.settings.image_contrast == true %}image-contrast{% endif %}">
		<div class="row">
          
          <div class="col-md-11 col-xs-12">
            {% if section.settings.use_image == true %}
              {% if section.settings.image_two == blank %}
				<img src="{{'twi_ph.png' | asset_url }}">
              {% else %}
				<img src="{{section.settings.image_two | img_url: '4000x' }}">
              {% endif %}
            {% else %}
             <video style="width:100%;height:100%" preload="metadata" id="videoPlayer" autoplay="" muted="" loop="" playsinline="" src="{{section.settings.video}}">
                    <source id="videoSource" type="video/mp4" src="">
              </video>
            {% endif %}
          </div>
          <div class="col-md-1 col-xs-12">
          </div>
        </div>
      </div>
      <div class="corner__vid_txt content-text-outer col-xs-12 col-sm-6 col-md-6 {% if section.settings.radio == "left" %}{% endif %}">
          <div class="content-text-inner lazy-container mobile-h-padding" {% if section.settings.text_color_check == true %}style="color: {{ section.settings.text_color }}"{% endif %}>
           
            <div class="cti_inner">
            
            {% for block in section.blocks %}
              <div class="cti_block row" style="border:0;">
<!--                 <div class="ctib_bg_icon col-xs-3 col-md-2 text-center">
                  <span style="background:{{block.settings.badge}};color:{{block.settings.badgeT}};">{{block.settings.title}}</span>
                </div> -->
                <div class="row cti_br_inn col-md-10 col-xs-12 {% if forloop.last %}no_border_cti{% endif %}">
                <div class="ctib_img col-xs-2 col-md-2">
                  
                 
                  {% if block.settings.enable_svg == true %}
                  {% if block.settings.use_svg == blank %}
                    <img src="{{'ico.png' | asset_url }}">
                  {% else %}
                   <div>{{ block.settings.use_svg }}</div>
                  {% endif %}
                  {% else %}
                   {% if block.settings.image == blank %}
                    <img src="{{'ico.png' | asset_url }}">
                  {% else %}
                  <img src="{{block.settings.image | img_url: '4000x' }}">
                  {% endif %}
                  {% endif %}
                </div>
                <div class="ctib_txt col-xs-10 col-md-10 cti_txt">
                  
                  <div>
                    {{block.settings.text}}
                  </div>
                </div>
              </div>
              </div>
            {% endfor %}
            </div>
            {% if section.settings.label != blank %}
            <div class="cti_btn">
              <button onlclick="document.location='{{section.settings.link}}'" type="button" class="btn btn-full-small reveal-up-child ">
                <span>{{section.settings.label}}</span>
                <span class="btn_icon"> {% include 'btn_arrow' %}</span>
              </button>
            </div>
            {% endif %}
          </div>
      </div>
  </div>
  {% if section.settings.radio_page == "boxed" %}
  </div>
  {% endif %}
  
  </div>

  {% schema %}
  {
      "name": "Image & Numbered Text",
      "class": "vidoe-with-image",
      "tag": "section",
      "settings": [
        {
          "type": "header",
          "content": "Image Settings"
        },
        
        {
          "type": "radio",
          "id": "radio_page",
          "label": "Section Width",
          "default": "full",
          "options": [
              {
                  "value": "full",
                  "label": "Full Width"
              },
              {
                "value": "boxed",
                "label": "Boxed"
              }
          ]
        },
        {
          "type": "text",
          "id": "video",
          "label": "Shopify Video Url",
		  "default": "//cdn.shopify.com/s/files/1/1209/5722/t/197/assets/how_to.mp4?v=9631786085231936531",
		  "info": "Go to Admin settings > Files > Upload video > copy url > Paste in above box"
        },
                {
          "type": "checkbox",
          "id": "use_image",
          "label": "Use Image instead of video",	
		  "default": false
        },
        {
          "type": "image_picker",
          "id": "image_two",
          "label": "Upload Image if enabled"
        },
        {
          "type": "header",
          "content": "Colors"
        },
        {
          "type": "checkbox",
          "id": "text_color_check",
          "label": "Use Custom Colors",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "btn_style",
          "label": "Light Button",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "image_contrast",
          "label": "Image Contrast On Mobile",
          "default": false
        },
        {
          "type": "color",
          "id": "bg",
          "label": "Background",
          "default": "#fff"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#fff"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Section Image"
        },
        {
            "type": "radio",
            "id": "radio",
            "label": "Image Alignment",
            "default": "left",
            "options": [
                {
                    "value": "left",
                    "label": "Left Align"
                },
                {
                  "value": "right",
                  "label": "Right Align"
                }
            ]
        },
        {
          "type": "header",
          "content": "Text Settings"
        },
        {
          "type": "richtext",
          "id": "heading",
          "label": "Heading",
"default": "<p>Heading Text</p>"
        },
        {
          "type": "richtext",
          "id": "subHeading",
          "label": "Sub Heading",
"default": "<p>Sub Heading Text</p>"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Button label",
		  "default": "Explore"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button link"
        }

      ],
      "blocks":[
       {
        "name": "text icon",
        "type": "icon-txt",
        "settings": [
            {
              "type":"color",
              "id":"badge",
              "label": "Badge Background",
			   "default": "#000000"
            },
            {
              "type":"color",
              "id":"badgeT",
              "label": "Badge Text Color",
			   "default": "#ffffff"
            },
            {
              "type":"text",
              "id":"title",
              "label": "text"
            },
            {
              "type":"richtext",
              "id":"text",
              "label": "text"
            },
            {
              "type":"image_picker",
              "id":"image",
              "label": "icon"
            },
            {
              "type":"text",
              "id":"use_svg",
              "label": "svg Code"
            },
            {
              "type":"checkbox",
              "id":"enable_svg",
              "label": "Use SVG image",
              "default": true
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Image & Numbered Text",
          "category": "Video"
        }
      ]
    }
  {% endschema %}
  