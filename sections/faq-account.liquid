<div class="accordian">
    <div class="section-header">
        <p class="subheading product-time">{{ section.settings.subheading | escape }}</p>
        <h2>{{ section.settings.heading | escape }}</h2>
    </div>
    <div class="accordian_inner">
    <ul>
    {%- for block in section.blocks -%}
        <li class="accordian_tab">
        <h4 class="title"><span class="fa fa-plus">+</span>
            {{ block.settings.ques }}
        </h4>
        <div class="accordian_info">
            <p>{{ block.settings.ans }}</p>
        </div>
        </li>
    {%- endfor -%}
    </ul>
    </div>
</div>



{% schema %}
{
  "name": "Account Related",
  "class": "col-xs-12",
  "tag": "section",
  "settings": [
    {
        "type": "header",
        "content": "Accordian Section"
    },
    {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": " Account"
    },
    {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Account Questions"
    }
  ],
  "blocks": [
        {
            "type": "text",
            "name": "Accordian Block",
            "settings": [
                {
                    "type": "textarea",
                    "id": "ques",
                    "label": "Question",
                    "default": "Question goes here"
                },
                {
                    "type": "textarea",
                    "id": "ans",
                    "label": "Answer",
                    "default": "Answer goes here"
                }
            ]
        }
    ]
}
{% endschema %}