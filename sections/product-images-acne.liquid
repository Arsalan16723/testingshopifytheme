<div class="page-width product-images-acne">
    <div class="section-header text-center">
        <p class="subheading reveal-up-child">The Results</p>
        <h2>Real Transformations<br>Real Stories</h2>
    </div>
    <div id="content-inner-{{ section.id }}" 
      class="content-inner row middle-md" 
      style="background-color: {{ section.settings.bg }}">
        <div class="col-xs-6 col-sm-6 col-md-3 lazy-container">
            <img id="content-image-{{ section.id }}"
                class="content-image lazyload"
                src="{{ section.settings.image | img_url: '50x' }}"
                data-srcset="{{ section.settings.image | img_url: '180x' }} 180w, {{ section.settings.image | img_url: '360x' }} 360w, {{ section.settings.image | img_url: '540x' }} 540w, {{ section.settings.image | img_url: '720x' }} 720w, {{ section.settings.image | img_url: '900x' }} 900w"
                data-sizes="auto"
                alt="{{ section.settings.image.alt | escape }}">
        </div>
        <div class="col-xs-6 col-sm-6 col-md-3 lazy-container">
            <img id="content-image-{{ section.id }}"
                class="content-image lazyload"
                src="{{ section.settings.image1 | img_url: '50x' }}"
                data-srcset="{{ section.settings.image1 | img_url: '180x' }} 180w, {{ section.settings.image1 | img_url: '360x' }} 360w, {{ section.settings.image1 | img_url: '540x' }} 540w, {{ section.settings.image1 | img_url: '720x' }} 720w, {{ section.settings.image1 | img_url: '900x' }} 900w"
                data-sizes="auto"
                alt="{{ section.settings.image1.alt | escape }}">
        </div>
        <div class="col-xs-6 col-sm-6 col-md-3 lazy-container">
            <img id="content-image-{{ section.id }}"
                class="content-image lazyload"
                src="{{ section.settings.image2 | img_url: '50x' }}"
                data-srcset="{{ section.settings.image2 | img_url: '180x' }} 180w, {{ section.settings.image2 | img_url: '360x' }} 360w, {{ section.settings.image2 | img_url: '540x' }} 540w, {{ section.settings.image2 | img_url: '720x' }} 720w, {{ section.settings.image2 | img_url: '900x' }} 900w"
                data-sizes="auto"
                alt="{{ section.settings.image2.alt | escape }}">
        </div>
        <div class="col-xs-6 col-sm-6 col-md-3 lazy-container">
            <img id="content-image-{{ section.id }}"
                class="content-image lazyload"
                src="{{ section.settings.image3 | img_url: '50x' }}"
                data-srcset="{{ section.settings.image3 | img_url: '180x' }} 180w, {{ section.settings.image3 | img_url: '360x' }} 360w, {{ section.settings.image3 | img_url: '540x' }} 540w, {{ section.settings.image3 | img_url: '720x' }} 720w, {{ section.settings.image3 | img_url: '900x' }} 900w"
                data-sizes="auto"
                alt="{{ section.settings.image3.alt | escape }}">
        </div>
    </div>
    </div>
    
    
    {% schema %}
    {
        "name": "Content with Image",
        "class": "content-with-image",
        "tag": "section",
        "settings": [
          {
            "type": "header",
            "content": "Colors"
          },
          {
            "type": "color",
            "id": "bg",
            "label": "Background",
            "default": "#fff"
          },
          {
            "type": "header",
            "content": "Image Settings"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Section Image One"
          },
          {
            "type": "image_picker",
            "id": "image1",
            "label": "Section Image Two"
          },
          {
            "type": "image_picker",
            "id": "image2",
            "label": "Section Image Three"
          },
          {
            "type": "image_picker",
            "id": "image3",
            "label": "Section Image Four"
          },
          {
            "type": "header",
            "content": "Text Settings Five"
          },
          {
            "type": "text",
            "id": "subtitle",
            "label": "Subheading",
            "default": "The Results"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Real Transformations<br>Real Stories"
          }
        ]
      }
    {% endschema %}
    