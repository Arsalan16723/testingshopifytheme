<div class="faq-container-index">
    <div class="page-width mobile-h-padding">
        <div class="accordian">
            <div class="section-header text-center">
                <p class="subheading reveal-up-child">{{ section.settings.subheading | escape }}</p>
                <h2>{{ section.settings.heading | escape }}</h2>
            </div>
            <div class="accordian_inner">
            <ul>
            {%- for block in section.blocks -%}
            <li class="accordian_tab">
                <h4 class="title"><span class="fa fa-plus">+</span>
                {{ block.settings.title }}
                </h4>
                <div class="accordian_info" >
                <p>{{ block.settings.ans }}</p>
                </div>
            </li>
            {%- endfor -%}
            </ul>
        </div>
        </div>
    </div>
</div>

<style>

.faq-container-index{
background-color: {{ section.settings.accordian_back_color }};
}

</style>


{% schema %}
{
"name": "FAQ Section",
"tag": "section",
"settings": [
{
    "type": "header",
    "content": "Accordian Section"
},
{
    "type": "text",
    "id": "subheading",
    "label": "Subheading",
    "default": "Common"
},
{
    "type": "text",
    "id": "heading",
    "label": "Heading",
    "default": "General Questions"
},

  {
    "type": "color",
    "id": "accordian_back_color",
    "label": "Background colors",
    "default": "#fff"
  }
  
],
"blocks": [
    {
        "type": "text",
        "name": "Accordian Block",
        "settings": [
            {
                "type": "textarea",
                "id": "title",
                "label": "Question",
                "default": "Question goes here"
            },
            {
                "type": "textarea",
                "id": "ans",
                "label": "Answer",
                "default": "Answer goes here"
            }
        ]
    }
],
"presets": [
    {
      "name": "FAQ Section",
      "category": "Text"
    }
  ]
}
{% endschema %}